services:
  web:
    image: nginx:stable
    ports: ["8080:80"]
    volumes:
      - ./:/var/www/html
      - ./ops/nginx.conf:/etc/nginx/conf.d/default.conf
    depends_on: [php]
  php:
    build: ./ops/php
    volumes:
      - ./:/var/www/html
  db:
    image: mysql:8.0
    environment:
      MYSQL_DATABASE: app
      MYSQL_USER: app
      MYSQL_PASSWORD: app
      MYSQL_ROOT_PASSWORD: root
  volumes:
      - ./ops/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    ports: ["33060:3306"]
    volumes:
      - dbdata:/var/lib/mysql
volumes:
  dbdata:
